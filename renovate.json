{
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)"
  ],
  "prHourlyLimit": 0,
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update go run/go install dependencies",
      "managerFilePatterns": [
        "/.*\\.go$/",
        "/Makefile/"
      ],
      "matchStrings": [
        "\\s*go (run|install) (?<depName>([^@]+)?).*@(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "go"
    }
  ]
}
